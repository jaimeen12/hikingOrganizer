extends layout 

block content 

    h1(class="mt-3 mb-3") My Groups
    
    div(class="container")
        if(groups)
            each group, i in groups 
                -var num = i+1;
                -var name = group.dataValues.name
                div(class="col")
                    div(class="list-unstyled card-body")
                        li= ` `
                            a(class = "w-50 btn btn-lg btn-warning mt-2 mb-2" href='/group/' + name) #{groups[i].dataValues.name}
        

        
    if(groupInvites)
        hr
        h1(class="mt-3 mb-3") Group Invites
        div(class="container")
        
        
            each groupInvite, i in groupInvites
                -if(groupInvites[i].dataValues.display==true)
                    div(class="col list-unstyled")
                        li= `${groupInvites[i].dataValues.sender} invited you to join ${groupInvites[i].dataValues.groupname}`
                            div(class="row")
                            a(class = "w-10 btn btn-sm btn-success mt-2 mb-2" href='/group/invite/accept/' + groupInvites[i].dataValues.id) Accept     
                            a(class = "w-10 btn btn-sm btn-danger mt-2 mb-2" href='/group/invite/reject/' + groupInvites[i].dataValues.id) Reject

    hr
    <h2>Create Group</h2>
        div(class="container")
            a(class = "w-30 btn btn-lg btn-info mt-3 mb-3" href="/groups/create") Create Group

    hr
    <h2>View All Groups</h2>
        div(class="container")
            a(class = "w-30 btn btn-lg btn-info mt-3 mb-3"  href="/groups") View Groups

    div(class="container")
        a(class = "d-flex justify-content-center w-10 btn btn-lg btn-danger mt-6" href="/user/logout") Logout

    
